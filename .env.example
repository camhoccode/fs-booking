# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/fs_booking

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication (REQUIRED in production)
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h

# CORS Configuration (comma-separated origins for production)
# Leave empty or don't set for development (allows all origins)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Default return URL for payments
DEFAULT_RETURN_URL=https://yourdomain.com/payment/callback

# Webhook Secrets for Payment Providers (REQUIRED for webhook verification)
# Get these from your payment provider dashboards
WEBHOOK_SECRET_MOMO=your-momo-webhook-secret
WEBHOOK_SECRET_VNPAY=your-vnpay-webhook-secret
WEBHOOK_SECRET_ZALOPAY=your-zalopay-webhook-secret
WEBHOOK_SECRET_CARD=your-card-webhook-secret
